<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} â€” {% endif %}{{ site.title }}</title>
    <meta name="description" content="{{ description or site.tagline }}" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} Blog Feed" href="/feed.xml" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/assets/css/main.css">

    {% if site.plausibleDomain %}
    <!-- Plausible Analytics -->
    <script defer data-domain="{{ site.plausibleDomain }}" src="https://plausible.io/js/script.js"></script>
    {% endif %}
  </head>
  <body class="d-flex flex-column min-vh-100">
    <a class="visually-hidden-focusable" href="#main">Skip to content</a>

    {% include "partials/header.njk" %}

    <main id="main" class="flex-grow-1" tabindex="-1">
      <div class="container py-4">
        {% if pageHeader %}
        <header class="mb-4">
          <h1 class="display-5">{{ pageHeader }}</h1>
          {% if lead %}<p class="lead text-secondary">{{ lead }}</p>{% endif %}
        </header>
        {% endif %}
        {{ content | safe }}
      </div>
    </main>

    {% include "partials/footer.njk" %}

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Fuse.js for client-side search -->
    <script src="https://cdn.jsdelivr.net/npm/fuse.js@7.0.0"></script>
  </body>
</html>
